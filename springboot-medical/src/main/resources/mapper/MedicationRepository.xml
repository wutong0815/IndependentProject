<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.springbootmedical.Repository.MedicationRepository">
    <select id="findAll" resultType="com.example.springbootmedical.entity.Medication">
        select * from medication
    </select>
    <select id="findById" resultType="com.example.springbootmedical.entity.Medication">
        select * from medication where id = #{id}
    </select>
    <insert id="save" parameterType="com.example.springbootmedical.entity.Medication">
        insert into medication (name, type, price, stock)
        values (#{name}, #{type}, #{price}, #{stock})
    </insert>

    <select id="findByName" resultType="com.example.springbootmedical.entity.Medication">
        select * from medication where name = #{name}
    </select>


</mapper>