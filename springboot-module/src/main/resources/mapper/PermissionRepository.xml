<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.springbootmodule.mapper.PermissionRepository">


    <select id="findByType" resultType="com.example.springbootmodule.domain.Permission">
        SELECT * FROM sys_permission
        WHERE type = #{type}
    </select>

    <select id="findByCode" resultType="com.example.springbootmodule.domain.Permission">
        SELECT * FROM sys_permission
        WHERE permission_code = #{permissionCode}
    </select>


    <select id="findPermissionsByRoleId" resultType="com.example.springbootmodule.domain.Permission">
        SELECT p.* FROM sys_permission p
                            INNER JOIN sys_role_permission rp ON p.id = rp.permission_id
        WHERE rp.role_id = #{roleId}
          AND p.deleted = 0
          AND rp.deleted = 0
        ORDER BY p.create_time DESC
    </select>


</mapper>